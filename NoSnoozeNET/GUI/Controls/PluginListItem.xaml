<UserControl x:Class="NoSnoozeNET.GUI.Controls.PluginListItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NoSnoozeNET.GUI.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="25" d:DesignWidth="200" Name="UI">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="25"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Image Name="Image" Source="{Binding ElementName=UI, Path=PluginImage}"></Image>
        <Label Grid.Column="1" Content="{Binding ElementName=UI, Path=PluginName, FallbackValue=Plugin}" Foreground="{DynamicResource LabelBrush}" Margin="5,-2,0,-1" FontSize="12" VerticalAlignment="Center"></Label>
    </Grid>
</UserControl>
